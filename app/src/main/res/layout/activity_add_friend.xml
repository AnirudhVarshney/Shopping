<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.abhinav.udacityshopping.AddFriend">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_add_friend_email"
        android:layout_width="match_parent"
        style="@android:style/TextAppearance"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/edit_text_add_friend_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter friends email"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:visibility="visible"/>
              <!-- TODO You should set this to visible -->

    </android.support.design.widget.TextInputLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_add_friend_email"

        android:id="@+id/rv_recycler_search">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_recycler_search"
        android:id="@+id/rv_recycler_addfriend">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
